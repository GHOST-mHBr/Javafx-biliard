<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="hBoxMain" maxHeight="800.0" maxWidth="1300.0" minHeight="800.0" minWidth="1300.0" prefHeight="800.0" prefWidth="1300.0" type="HBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="vBoxMain" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="200.0" spacing="5.0" style="-fx-background-color: black;">
         <children>
            <Label fx:id="labelScoreText" text="Score" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="36.0" />
               </font>
            </Label>
            <Label fx:id="labelScoreValue" text="0" textFill="WHITE">
               <font>
                  <Font name="Arial" size="30.0" />
               </font>
            </Label>
            <Label fx:id="labelShotsText" text="Shots" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets top="300.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="labelShotsValue" text="0" textFill="WHITE">
               <font>
                  <Font name="System" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="40.0" />
         </padding>
      </VBox>
      <Pane fx:id="mainPane">
         <children>
            <ImageView fx:id="imageViewBack" fitHeight="800.0" fitWidth="1100.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="imageViewCue" fitHeight="14.0" fitWidth="591.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
   </children>
</fx:root>
